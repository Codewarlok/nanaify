---
import Time from "@/icons/Time.astro";
import { type Song } from "@/lib/data";

interface Props {
    songs: Song[]
}

const { songs } = Astro.props
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/20">
    <thead>
        <tr class="text-gray-400 text-sm font-light">
            <th class="px-4 py-2">#</th>
            <th class="px-4 py-2">Título</th>
            <th class="px-4 py-2">Álbum</th>
            <th class="px-4 py-2"><Time></th>
        </tr>
    </thead>

    <tbody>
        <tr class="h-[16px]"></tr>
        {
            songs.map((song, index) => (
                <tr class="text-gray-300 text-sm font-light hover:bg-zinc-800 transition duration-300">
                    <td class="px-4 py-2 rounded-tl-md rounded-bl-md w-3">{index + 1}</td>
                    <td class="px-4 py-2 flex gap-3">
                        <picture class="">
                            <img 
                                src={song.image} 
                                alt={song.title} 
                                class="w-11 h-11 rounded-md" />
                        </picture>
                        <div class="flex flex-col">
                            <h3 class="text-white font-normal">{song.title}</h3>
                            <span>{song.artists.join(", ")}</span>
                        </div>
                    </td>
                    <td class="px-4 py-2">{song.album}</td>
                    <td class="px-4 py-2 rounded-br-md rounded-tr-md">{song.duration}</td>
                </tr>
            ))
        }
    </tbody>
</table>